# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Configuration files
*.conf text eol=lf
*.config text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Source code
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.rs text eol=lf
*.go text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.otf binary

# Windows specific
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf 